#This file was generated by Chef for <%= node['fqdn'] %>
/var/log/lsyncd/lsyncd.log {
    rotate <%= node['rackspace-lsyncd']['logrotate-options']['rotate'] %>
    <%= node['rackspace-lsyncd']['logrotate-options']['frequency'] %>
    <% if node['rackspace-lsyncd']['logrotate-options']['compress'] == true %>
    compress
    <% else %>
    nocompress
    <% end %>
    missingok
    notifempty
}
